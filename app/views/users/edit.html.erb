<h1> Edit an Existing User </h1>

<p id ="notice"><%= notice %></p>

<%= form_for @user do |f| %>
  Username: <%=f.text_field :username, placeholder: "{#{@user.username}}" %><br />
  E-mail: <%=f.text_field :email, placeholder: "#{@user.email}"  %><br />
  Password: <%=f.password_field :password %><br />
  <%= f.submit %>
<% end %>
